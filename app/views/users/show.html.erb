<section class="section">
  <div class="container">
    <div class= "article-summary">
     <h1 class="heading">Profile</h1>

        <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, alt: "Image to #{@user.name}", class: "avatar-profile article-summary"%>
        <% else %>
            <%= image_tag "user_empty.png", alt: "Image not found", class: "avatar-profile article-summary" %>
        <% end %>

      <strong>
        <%=@user.name %>
      </strong>

      <div class= "text-tweet">
        <%="@" + @user.username %>
      </div>

      <div class= "text-tweet margin-bottom" >
       <span>Joined on</span>
        <% formatted_time = @user.created_at.strftime("%b %e, %Y")%>
        <%= formatted_time %>
      </div>

      <div>
        <%= link_to 'Edit profile', edit_user_registration_path,  class: "button--sm button--primary overline"%>
      </div>
    </div>

    </div>
      <h1>Tweets</h1>
          <div id="tweets">
          <% @user.tweets.each do |tweet| %>
              <% if !tweet.replied_to_id? %>
              <div>
              <%= render tweet %>
              </div>
              <p>
              <%= link_to "Show this tweet", tweet %>
              </p>
              <% end %>
          <% end %>
        </div>
    <div>

    <div id="tweets">
      <% @tweets.each do |tweet| %>
        <% if !tweet.replied_to_id? %>
          <div class="tweet">
            <%= render tweet %>
          </div>
          <p>
            <%= link_to "Show this tweet", tweet %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</section>

