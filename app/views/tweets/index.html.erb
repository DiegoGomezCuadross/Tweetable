<p style="color: green"><%= notice %></p>
<main>
  <div class="container-lg">
    <h1 class= "article-summary">Home</h1>
    <div class="card-new-tweet ">
     <%= render "form", tweet: @tweet %>
    </div>
    <div class="grid-container">
      <div id="tweets">
        <% @tweets.each do |tweet| %>
          <% if !tweet.replied_to_id? %>
            <div class="tweet">
              <%= render tweet %>
              <p>
                <%= link_to "Show this tweet", tweet %>
              </p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</main>