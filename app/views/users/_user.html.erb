<div id="<%= dom_id user %>">

  <% if user.avatar.attached? %>
    <div>
      <%= image_tag user.avatar, alt: "Image to #{user.name}", class: "avatar" %>
    </div>
  <% else %>
    <div>
      <%= image_tag "user_empty.png", alt: "Image not found", class: "avatar" %>
    </div>
  <% end %>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Username:</strong>
    <%= user.username %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong>Password:</strong>
    <%= user.password %>
  </p>

  <p>
    <strong>Role:</strong>
    <%= user.role %>
  </p>

</div>
