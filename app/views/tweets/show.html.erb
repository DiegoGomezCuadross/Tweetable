<p style="color: green"><%= notice %></p>
<div class = "container-lg">
  <%= render @tweet %>
  <div class="card-new-tweet ">
    <%= render "form", tweet: Tweet.new(replied_to_id: @tweet.id)  %>
  </div>
    <p>
      <strong>Replied to:</strong>
      <% @tweet.replies.each do |tweet| %>
      <div>
      <%= render tweet%>
      </div>
      <% end %>
    </p>

  <div>
    <%= link_to "Edit this tweet", edit_tweet_path(@tweet) %> |
    <%= link_to "Back to tweets", tweets_path %>

    <%= button_to "Destroy this tweet", @tweet, method: :delete %>
  </div>
</div>