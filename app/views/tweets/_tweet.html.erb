<div id="<%= dom_id tweet %>">
  <p>
    <strong>Body:</strong>
    <%= tweet.body %>
  </p>

  <p>
    <strong>Replies count:</strong>
    <%= tweet.replies_count %>
  </p>

  <p>
    <strong>Likes count:</strong>
    <%= tweet.likes_count %>
  </p>

  <p>
    <strong>User:</strong>
    <%= tweet.user.name %>
  </p>

  <p>
    <strong>Replied to:</strong>
    <% @tweet.replies.each do |reply| %>
    <div>
      <strong>Comment:</strong>
      <%= reply.body %>
      </br>
      <strong>User:</strong>
      <%= reply.user.username %>
    </div>
    <% end %>
  </p>

</div>
