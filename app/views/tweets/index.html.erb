<p style="color: green"><%= notice %></p>

<h1>Tweets</h1>

<%= render "form", tweet: @tweet %>

<div id="tweets">
  <% @tweets.each do |tweet| %>
    <% if !tweet.replied_to_id? %>
    <div>
    <%= render tweet %>
    </div>
    <p>
    <%= link_to "Show this tweet", tweet %>
    </p>
    <% end %>
  <% end %>
</div>